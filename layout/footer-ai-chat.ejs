<script>
  let submitBtn = document.getElementById("submitBtn");

  function submitBtnToggle() {
    if (document.getElementById("aiInput").value !== "") {
      submitBtn.style.opacity = 1;
    } else {
      submitBtn.style.opacity = 0;
    }
  }
  function submitBtnShow() {
    submitBtn.style.opacity = 1;
  }

  function submitBtnHidden() {
    submitBtn.style.opacity = 0;
  }

  aiInput.addEventListener("input", submitBtnToggle);


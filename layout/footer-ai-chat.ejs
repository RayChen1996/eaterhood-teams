<footer class="footer-ai">
  <div class="footer-ai-container">
    <div class="d-flex align-items-center gap-2">
      <img
        class="img-size"
        src="../assets/images/icon/camera.svg"
        alt="camera.svg"
      />
      <div class="footer-ai-input w-100 d-flex">
        <input
          id="aiInput"
          type="text"
          class="t2 p-0 col"
          placeholder="傳送訊息...."
        />
        <img
          id="submitBtn"
          class="img-size"
          src="../assets/images/icon/camera.svg"
          alt="camera.svg"
          style="opacity: 0"
        />
      </div>
    </div>
  </div>
  <div class="light-bar-container">
    <div class="light-bar"></div>
  </div>
</footer>

<script>
  let submitBtn = document.getElementById("submitBtn");

  function submitBtnToggle() {
    if (document.getElementById("aiInput").value !== "") {
      submitBtn.style.opacity = 1;
    } else {
      submitBtn.style.opacity = 0;
    }
  }
  function submitBtnShow() {
    submitBtn.style.opacity = 1;
  }

  function submitBtnHidden() {
    submitBtn.style.opacity = 0;
  }

  aiInput.addEventListener("input", submitBtnToggle);
</script>
